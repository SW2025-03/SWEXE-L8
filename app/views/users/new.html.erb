<h1>新規登録</h1>

<% if @user.errors.any? %>
  <div style="color: red;">
    <strong><%= @user.errors.count %>件のエラーがあります：</strong>
    <ul>
      <% @user.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
    </ul>
  </div>
<% end %>

<%= form_with model: @user, local: true do |f| %>

  <p>
    <%= f.label :name, "名前" %><br>
    <%= f.text_field :name %>
  </p>

  <p>
    <%= f.label :email, "メールアドレス" %><br>
    <%= f.email_field :email %>
  </p>

  <p>
    <%= f.label :password, "パスワード 6文字以上" %><br>
    <%= f.password_field :password %>
  </p>

  <p>
    <%= f.label :password_confirmation, "パスワード確認" %><br>
    <%= f.password_field :password_confirmation %>
  </p>

  <%= f.submit "登録" %>

<% end %>

<p>
  <%= link_to "ログインへ戻る", login_path %>
</p>
