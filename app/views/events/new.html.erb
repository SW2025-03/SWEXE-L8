<h1>新規イベント作成</h1>

<%= form_with model: @event, local: true do |f| %>
  <p>イベント名<br><%= f.text_field :title %></p>
  <p>詳細<br><%= f.text_area :description %></p>
  <p>開始日時<br><%= f.datetime_select :start_datetime %></p>
  <p>終了日時<br><%= f.datetime_select :end_datetime %></p>
  <p>場所<br><%= f.text_field :location %></p>
  <p>参加人数上限<br><%= f.number_field :capacity %></p>
  <p>カテゴリ<br><%= f.text_field :category %></p>
  <p>主催者<br><%= f.text_field :organizer, value: current_user.name, disabled: true %></p>
  <p>公開設定<br><%= f.check_box :is_public %></p>
  <p>サムネイルURL<br><%= f.text_field :thumbnail_url %></p>
  <%= f.submit "作成" %>
<% end %>