<h1 style="text-align: center;">ログイン</h1>

<%= form_with url: login_path, method: :post, local: true do |f| %>
  <p style="text-align: center;">
    <%= label_tag :email, "メールアドレス" %><br>
    <%= text_field_tag :email %>
  </p>

  <p style="text-align: center;">
    <%= label_tag :password, "パスワード" %><br>
    <%= password_field_tag :password %>
  </p>

  <p style="text-align: center;">
    <%= submit_tag "ログイン" ,class: "search-button"%>
  </p>
<% end %>

<p style="text-align: center;">
  <%= link_to "新規登録はこちら", new_user_path %>
</p>
