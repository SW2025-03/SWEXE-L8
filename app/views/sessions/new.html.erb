<h1>ログイン</h1>

<%= form_with url: login_path, method: :post, local: true do |f| %>
  <p>
    <%= label_tag :email, "メールアドレス" %><br>
    <%= text_field_tag :email %>
  </p>

  <p>
    <%= label_tag :password, "パスワード" %><br>
    <%= password_field_tag :password %>
  </p>

  <%= submit_tag "ログイン" %>
<% end %>

<p>
  <%= link_to "新規登録はこちら", new_user_path %>
</p>
